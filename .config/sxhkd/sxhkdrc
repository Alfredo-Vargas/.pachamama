# Change your wallpaper randomly
alt + b
  feh --bg-fill --randomize ~/.wallpapers/* 

# Open your webbrowser
alt + f
  firefox

# Toggle picom
alt + p
  $HOME/projects/scripts/toggle_picom.sh

# Show time
alt + t
  $HOME/projects/scripts/date.sh

# Take a print screen of all
Print
  flameshot full -p $HOME/Pictures/screenshots/

# Take a are screen 
shift + Print
  flameshot gui

# Open qCreator
alt + o
  $HOME/projects/scripts/qcreator.sh

# Open android studio
alt + l
  $HOME/projects/scripts/studio.sh

# Lenovo increase/decrease brightness
XF86MonBrightnessUp
  xrandr --output eDP-1 --brightness .7

XF86MonBrightnessDown
  xrandr --output eDP-1 --brightness .4
